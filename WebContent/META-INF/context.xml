<?xml version="1.0" encoding="UTF-8"?>

<Context>
	<!-- DBCP 사용을 위한 환경 설정 -->
	<Resource
		name = "jdbc/MySQL"
		auth = "Container"
		type = "javax.sql.DataSource"	
		username="root"
		password="1234"
		driverClassName="com.mysql.cj.jdbc.Driver"
		factory = "org.apache.tomcat.dbcp.dbcp2.BasicDataSourceFactory"
		url = "jdbc:mysql://localhost:3306/artbox_clone?serverTimezone=UTC"
		maxIdle = "5"
	/>
</Context>